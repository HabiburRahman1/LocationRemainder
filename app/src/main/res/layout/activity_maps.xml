
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background_change"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.employeeinformation.io.respay.locationremainder.MapsActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/current_address"
        android:textColor="@color/white"
        />

    <AutoCompleteTextView
        android:layout_below="@+id/current_address"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/remainder_address"
        />
    <fragment
        android:layout_marginTop="5dp"
        android:layout_below="@+id/remainder_address"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</RelativeLayout>